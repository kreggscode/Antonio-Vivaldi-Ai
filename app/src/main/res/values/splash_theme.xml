<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Splash Screen Theme for Antonio Vivaldi App - Instant transition -->
    <style name="Theme.AntonioVivaldi.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#4A148C</item>
        <!-- Vivaldi-themed splash with musical icon -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_vivaldi</item>
        <item name="windowSplashScreenAnimationDuration">500</item>
        <item name="android:windowSplashScreenBrandingImage">@null</item>
        <item name="postSplashScreenTheme">@style/Theme.AntonioVivaldi</item>
        <!-- Removed deprecated statusBarColor and navigationBarColor -->
        <!-- These are now handled by enableEdgeToEdge() in SplashActivity -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>
